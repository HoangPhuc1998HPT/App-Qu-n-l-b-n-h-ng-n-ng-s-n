<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NongSanActivity">

    <Button
        android:id="@+id/btnThemNongSan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="THÊM NÔNG SẢN MỚI"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCapNhatNongSan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CẬP NHẬT NÔNG SẢN"
        app:layout_constraintTop_toBottomOf="@id/btnThemNongSan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnXoaNongSan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="XÓA NÔNG SẢN"
        app:layout_constraintTop_toBottomOf="@id/btnCapNhatNongSan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnThongTinNongSan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="THÔNG TIN NÔNG SẢN"
        app:layout_constraintTop_toBottomOf="@id/btnXoaNongSan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
